# Maintainer: Thomas Dziedzic <gostrc@gmail.com>

# based off linux-firmware from archlinux

pkgname=sd8787_uapsta-fw
pkgver=14.66.9.p192
pkgrel=1
pkgdesc="Firmware files for Marvell's sd8787_uapsta wifi chip"
makedepends=('git')
arch=('any')
url="http://git.marvell.com/?p=mwifiex-firmware.git;a=summary"
license=('GPL2' 'GPL3' 'custom')
conflicts=('linux-firmware')
options=(!strip)
source=('git://git.marvell.com/mwifiex-firmware.git#commit=633d06edab7a2b82efaa134ec5591cd20f9ac0a3')
md5sums=('SKIP')

package() {
  cd mwifiex-firmware

  install -d -m755 "${pkgdir}/usr/lib/firmware/mrvl"

  cp -a mrvl/sd8787_uapsta.bin "${pkgdir}/usr/lib/firmware/mrvl/"

  install -d -m755 "${pkgdir}/usr/share/licenses/linux-firmware/"

  mv {LICEN*,WHENCE} "${pkgdir}/usr/share/licenses/linux-firmware/"
}

# vim:set ts=2 sw=2 et:
