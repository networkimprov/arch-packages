# Maintainer: Thomas Dziedzic <gostrc@gmail.com>

pkgname="anvl-usb"
pkgver=3.0
pkgrel=1
pkgdesc="Enable USB peripherals"
arch=("armv7h")
url="https://github.com/networkimprov/usb-manager"
license=("none")
depends=('libusbg-git')
makedepends=('git')
install=${pkgname}.install
source=("git+https://github.com/networkimprov/usb-manager.git"
        "anvl-usb.service"
        "anvl-usb.sh"
        "anvl-getty.service")
md5sums=('SKIP'
         '19d22d10335b502507a3fef671c0c34e'
         'fc357510789e5532ec91993ce22a5ebe'
         '22fcb27f5754ffe8f3b03cdafa7314ac')

build() {
  cd usb-manager

  make dynamic
}

package() {
  install -D -m 644 "${srcdir}/anvl-getty.service" \
    "${pkgdir}/usr/lib/systemd/system/anvl-getty.service"

  install -D -m 644 "${srcdir}/anvl-usb.service" \
    "${pkgdir}/usr/lib/systemd/system/anvl-usb.service"

  install -D -m 755 "${srcdir}/anvl-usb.sh" \
    "${pkgdir}/usr/bin/anvl-usb.sh"

  install -D -m 755 "${srcdir}/usb-manager/usb-manager" \
    "${pkgdir}/usr/bin/usb-manager"
}

# vim:set ts=2 sw=2 et:
