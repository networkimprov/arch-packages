# Maintainer: Thomas Dziedzic <gostrc@gmail.com>

_npmname="inotify"
pkgname="nodejs-${_npmname}"
pkgver="1.2.1"
pkgrel="2"
pkgdesc="inotify bindings for v8 javascript engine"
arch=("armv7h")
url="https://github.com/c4milo/node-inotify"
license=("custom:MIT")
depends=("nodejs")
source=("http://registry.npmjs.org/${_npmname}/-/${_npmname}-${pkgver}.tgz")
noextract=("${_npmname}-${pkgver}.tgz")
md5sums=("8446d6270001c03b56c594b312de2ef6")

package() {
  npm install \
    --python=/usr/bin/python2 \
    --user root \
    -g \
    --prefix "${pkgdir}/usr" \
    "${_npmname}-${pkgver}.tgz"

  install -D "${pkgdir}/usr/lib/node_modules/${_npmname}/LICENSE" \
    "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ts=2 sw=2 et:
